<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Имя: Тимур Дойрашев"
                android:textColor="@color/txt_color_1"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:text="Лечение зубов качественно"
                android:textColor="@color/txt_color_1"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Адресс: Улица Черная 30"
                android:textColor="@color/txt_color_1"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_name" />

            <TextView
                android:id="@+id/txt_category_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="Специализация: "
                android:textColor="@color/txt_color_1"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_address" />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ad_card_element_background"
                android:backgroundTint="#54B7FF"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:text="@string/dentist"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_category_txt"
                app:layout_constraintStart_toEndOf="@+id/txt_category_txt"
                app:layout_constraintTop_toTopOf="@+id/txt_category_txt" />

            <TextView
                android:id="@+id/txt_your_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Ваша цена: "
                android:textColor="@color/txt_color_1"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_category" />

            <TextView
                android:id="@+id/txt_your_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ad_card_element_background"
                android:backgroundTint="#78FF7D"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:text="10000 KZT"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_your_price_txt"
                app:layout_constraintStart_toEndOf="@+id/txt_your_price_txt"
                app:layout_constraintTop_toTopOf="@+id/txt_your_price_txt" />

            <TextView
                android:id="@+id/txt_client_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Цена клиента: "
                android:textColor="@color/txt_color_1"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/txt_your_price"
                app:layout_constraintTop_toTopOf="@+id/txt_your_price_txt" />

            <TextView
                android:id="@+id/txt_client_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ad_card_element_background"
                android:backgroundTint="#F3C437"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:text="10000 KZT"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_client_price_txt"
                app:layout_constraintStart_toEndOf="@+id/txt_client_price_txt"
                app:layout_constraintTop_toTopOf="@+id/txt_client_price_txt" />

            <TextView
                android:id="@+id/txt_note_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:text="Примечание: Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis,"
                android:textColor="@color/txt_color_1"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_client_price_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/btn_reject"
                android:backgroundTint="@color/accept_color"
                android:text="Принять"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/cancel_color"
                android:text="Отказать"
                android:textAllCaps="false"
                android:textSize="13sp" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
